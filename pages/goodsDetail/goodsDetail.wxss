.goods-detail .banner {
  height: 55vw;
  width: 100%;
  text-align: center;
}

.banner .banner-item {
  width: 100%;
}

.banner-item image {
  width: 55%;
}

.goods-detail .price {
  padding: 10rpx;
  color: #eb4450;
}

.goods-detail .title-collect {
  display: flex;
  padding: 20rpx 10rpx;
  border-top: 3px solid #eb4450;
  border-bottom: 3px solid #eb4450;
  align-items: center;
  font-size: 28rpx;
}

.title-collect .title {
  flex: 5;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.title-collect .collect {
  flex: 1;
  border-left: 1px solid black;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.collect .icon-shoucang {
  font-size: 36rpx;
}

/* 已经收藏 */
.collect .collect-active {
  color: #eb4450;
}

.goods-detail .goods-img-info .info-name{
  padding: 10rpx;
  color: #eb4450;
  font-weight: 800;
}

.goods-img-info .info-content {
  margin-bottom: 90rpx;
}

.goods-detail .bottom-bar {
  border-top: 1rpx solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}

.bottom-bar .bottom-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}

.bottom-bar-item .contact, .bottom-bar-item .share {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  will-change: opacity;
}


.bottom-bar .add-cart, .bottom-bar .buy {
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom-bar .add-cart{
  flex: 2;
  background: skyblue;
}

.bottom-bar .buy {
  flex: 2;
  background: #eb4450;
}